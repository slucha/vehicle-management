<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

		<title>{% block title %}Vehicle Management{% endblock %}</title>

		{% block javascripts %}
			{# Ajoutez ces javascripts si vous comptez vous servir des fonctionnalitï¿½s du bootstrap Twitter #}
			<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
			<script src="{{ asset('bundles/vehiclemanagementchart/js/highcharts/highcharts.js') }}" type="text/javascript"></script>
			<script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>			
		{% endblock %}
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" type="text/css" />
			<link rel="stylesheet" href="{{ asset('css/vm.css') }}" type="text/css" />
		{% endblock %}
	</head>

	<body>
	
	<div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">Project name</a>
          <div class="nav-collapse">
            <ul class="nav">
              <li class="active"><a href="#">Home</a></li>
              <li><a href="#about">About</a></li>
              <li><a href="#contact">Contact</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
	
	
		<div class="container-fluid">

			<div id="header" class="page-header">
					<h1>Vehicle Management <small>Website for an easy vehicle management</small></h1>				
					<p>{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
						    <div class="btn-group">
							  <a class="btn" href="#"><i class="icon-user"></i> <strong>{{ app.user.username }}</strong></a>
							  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
							  <ul class="dropdown-menu">
							   <li><a href="{{  path('fos_user_profile_edit') }}"><i class="icon-pencil"></i> My profile</a></li>
							   <li><a href="{{ path('fos_user_security_logout') }}"><i class="icon-off"></i> Disconnect</a></li>	   
							  </ul>
							</div>
						{% else %}
							 <a class="btn" href="{{ path('fos_user_security_login') }}"><i class="icon-user"></i> <strong>Connection</strong></a>				
						{% endif %}
					</p>
			</div>
		<div class="row-fluid">
				<div id="menu" class="span2">
					<ul class="nav nav-pills nav-stacked">
						<li class={{ app.request.attributes.get('_route')|active('homepage') }}><a href="{{ path('_homepage') }}"><i class="icon-chevron-right"></i> Home</a></li>
						<li class={{ app.request.attributes.get('_route')|active('vehicle') }}><a href="{{ path('VehicleManagementManagementBundle_vehicle') }}"><i class="icon-chevron-right"></i> Vehicle</a></li>						
						<li class={{ app.request.attributes.get('_route')|active('refuel') }}><a href="{{ path('VehicleManagementManagementBundle_refuel') }}"><i class="icon-chevron-right"></i> Refuel</a></li>
						<li class={{ app.request.attributes.get('_route')|active('servicing') }}><a href="{{ path('VehicleManagementManagementBundle_servicing') }}"><i class="icon-chevron-right"></i> Servicing</a></li>
						<li class={{ app.request.attributes.get('_route')|active('main') }}><a href="{{ path('VehicleManagementChartBundle_main') }}"><i class="icon-chevron-right"></i> Chart</a></li>
					</ul>
                    
				</div>
				<div id="content" class="span9">
					{% block body %}
					{% endblock %}
				</div>
			</div>

			<hr>

			<footer>
				<p>Obtao &copy; 2012</p>
			</footer>
		</div>
	</body>
</html>
